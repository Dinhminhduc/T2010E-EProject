    <div class="container">
            <div class="login col-md-6">
                <h4>LOG IN TO YOUR ACCOUND</h4>
                <hr>
                <div class="form-group">
                    <label>Username<br>
                        <input name="user" class="ip-text" required type="text" placeholder="Type your username"/>
                    </label>
                </div>
                <div class="form-group">
                    <label>Password<br>
